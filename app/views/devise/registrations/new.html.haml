.user_background 
  = image_tag 'Rectangle.png', class: 'back-image'
.container
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = render "devise/shared/error_messages", resource: resource
    .field 
      = f.label :account
      %br/
      = f.text_field :username, autofocus: true, autocomplete: "username", class: 'text'
    .field
      = f.label :email
      %br/
      = f.email_field :email, autocomplete: "email", class: 'text'
    .field
      = f.label :password
      %br/
      = f.password_field :password, autocomplete: "new-password", class: 'text'
    .actions
      = f.submit "CREATE ACCOUNT", class: 'btn-primary'


